<section class="restaurant">
  <h1>{{restaurant.restaurant_name}}</h1>
  <p class="average-rating">Average Rating: {{restaurant.rating}}</p>
  <p class="average-cost">Average Price: ${{restaurant.avgCost}}</p>
  <h3>Reviews:</h3>
  {{#each reviews}}
    <p>{{review_content}}</p>
    <p>Rating: {{review_star}}</p>
  {{/each}}
  <h3>Burgers:</h3>
  {{#each burgers}}
    <p>{{burger_name}}</p>
    <p>${{total_cost}}</p>
    <img class="reviewed-burger" alt="Burger Image">{{image}}</img>
  {{/each}}
</section>
