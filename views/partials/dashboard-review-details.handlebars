<section class="review dashreview">
  <button
    class="deleteBtn"
    id="deleteReviewBtn"
    data-review-id="{{id}}"
  >X</button>
  <a href="/restaurant/{{restaurant.id}}">
    <h1>{{restaurant_name}}</h1>
  </a>
  <a href="/user/{{user.id}}">
    <h2>{{user.username}}</h2>
  </a>
  <p class="rating">{{convertToStars rating}}</p>
  <p class="post-date">{{format_date createdAt}}</p>
  {{#if image}}
    <div id="transformimg">
      <img
        class="reviewed-burger"
        src="/uploads/{{image}}"
        alt="Burger Image"
      />
    </div>
  {{/if}}
  <p>{{review_content}}</p>
</section>