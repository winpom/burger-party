<section class="review">
    <button class="deleteBtn" id="deleteReviewBtn" data-post-id="{{id}}">X</button>
    <a href="/restaurant/{{restaurant.id}}">
        <h1>{{restaurant_name}}</h1>
    </a>
    <a href="/user/{{user.id}}">
        <h2>{{user.username}}</h2>
    </a>
    <p class="rating">{{convertToStars rating}}</p>
    <p class="post-date">{{format_date createdAt}}</p>
    <img class="reviewed-burger" alt="Burger Image">{{image}}</img>
    <p>{{review_content}}</p>
</section>